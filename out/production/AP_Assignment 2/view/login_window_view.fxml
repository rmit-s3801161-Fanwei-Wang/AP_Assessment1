<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginWindowController">
   <children>
      <VBox layoutX="232.0" layoutY="321.0" spacing="2.0">
         <children>
            <Label alignment="TOP_LEFT" text="Login">
               <font>
                  <Font name="System Italic" size="27.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="loginInput" prefHeight="3.0" prefWidth="287.0" promptText="Student ID" />
            <Label fx:id="errorMessageLabel" text="Label" />
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" prefHeight="25.0" prefWidth="327.0" text="Login" />
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#closeSystem" prefHeight="27.0" prefWidth="327.0" text="Exit" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
      <Label layoutX="204.0" layoutY="133.0" text="Unilink System">
         <font>
            <Font size="63.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
